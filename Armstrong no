#include <iostream>
#include <cmath>   // for pow() function
using namespace std;

int main() {
    int num, temp, digits = 0, sum = 0;
    cout << "Enter a number: ";
    cin >> num;

    temp = num;

    // Count digits
    while (temp > 0) {
        digits++;
        temp /= 10;
    }

    temp = num;

    // Calculate sum of digits raised to 'digits'
    while (temp > 0) {
        int rem = temp % 10;
        sum += pow(rem, digits);
        temp /= 10;
    }

    // Check Armstrong condition
    if (sum == num)
        cout << num << " is an Armstrong number!" << endl;
    else
        cout << num << " is NOT an Armstrong number!" << endl;

    return 0;
}
using cmath header file





#include<iostream>
using namespace std;
int main() {
    int num;
    cin>>num;
    int temp = num;
    int count = 0;
    while(temp>0) {
        int digit = temp % 10;
        count++;
        temp/=10;
    }
    temp = num;
    int sum = 0;
    int rem;
    while(temp>0) {
        rem = temp % 10;
        int power = 1;
        int i;
        for(i=1;i<=count;i++) {
            power = power * rem;
        }
        sum = sum + power;
        temp /= 10;
    }
    if(sum == num) {
        cout<<"Armstrong no";
    }
    else {
        cout<<"Not an armstrong no";
    }
    return 0;
}
